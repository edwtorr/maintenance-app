---
import '@/styles/global.css';
import Sidebar from '@/components/Sidebar';
import Header from '@/components/Header';
import { ToastContainer } from '@/components/Toast';
import { useToastStore } from '@/utils/useToast';

export interface Props {
  title?: string;
  description?: string;
  currentPath?: string;
}

const {
  title = 'Gestión de Averías',
  description = 'Sistema de gestión de averías industriales',
  currentPath = Astro.url.pathname
} = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Initialize theme before render to prevent flash -->
    <script is:inline>
      const THEME_KEY = 'maintenance-app-theme';
      const theme = localStorage.getItem(THEME_KEY) || 'system';

      if (theme === 'dark' || (theme === 'system' && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
        document.documentElement.classList.add('dark');
      }
    </script>
  </head>
  <body>
    <!-- Sidebar -->
    <Sidebar client:load currentPath={currentPath} />

    <!-- Header -->
    <Header client:load />

    <!-- Main Content -->
    <main class="pt-16 lg:pl-64 min-h-screen bg-light-100 dark:bg-dark-950 transition-colors">
      <div class="p-4 lg:p-6">
        <slot />
      </div>
    </main>

    <!-- Toast Container -->
    <div id="toast-container"></div>

    <!-- Initialize theme system after mount -->
    <script>
      import { initTheme } from '@/utils/theme';
      import { useToastStore } from '@/utils/useToast';
      import { ToastContainer } from '@/components/Toast';
      import { createRoot } from 'react-dom/client';
      import { createElement } from 'react';

      initTheme();

      // Mount Toast Container
      const container = document.getElementById('toast-container');
      if (container) {
        const root = createRoot(container);

        const ToastWrapper = () => {
          const toasts = useToastStore((state) => state.toasts);
          const removeToast = useToastStore((state) => state.removeToast);

          return createElement(ToastContainer, {
            toasts,
            onClose: removeToast,
            position: 'top-right'
          });
        };

        root.render(createElement(ToastWrapper));
      }
    </script>
  </body>
</html>
