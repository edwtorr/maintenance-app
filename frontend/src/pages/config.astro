---
import MainLayout from '@/layouts/MainLayout.astro';
import Button from '@/components/Button';
import Badge from '@/components/Badge';
import Card, { CardHeader, CardBody } from '@/components/Card';
import { Plus, Edit, Trash2, ChevronDown, ChevronRight, Power, PowerOff } from 'lucide-react';

const productionLines = [
  {
    id: 1,
    name: 'L16',
    description: 'Línea de producción principal',
    isActive: true,
    machines: [
      { id: 1, name: 'Máquina XZ-100', code: 'XZ100', isActive: true, failures: 5 },
      { id: 2, name: 'Máquina XZ-101', code: 'XZ101', isActive: true, failures: 2 },
      { id: 3, name: 'Máquina XZ-102', code: 'XZ102', isActive: false, failures: 0 },
    ],
  },
  {
    id: 2,
    name: 'L20',
    description: 'Línea de producción secundaria',
    isActive: true,
    machines: [
      { id: 4, name: 'Máquina AB-250', code: 'AB250', isActive: true, failures: 3 },
      { id: 5, name: 'Máquina AB-251', code: 'AB251', isActive: true, failures: 1 },
    ],
  },
  {
    id: 3,
    name: 'L33',
    description: 'Línea de producción terciaria',
    isActive: true,
    machines: [
      { id: 6, name: 'Máquina CD-320', code: 'CD320', isActive: true, failures: 4 },
      { id: 7, name: 'Máquina CD-321', code: 'CD321', isActive: true, failures: 0 },
      { id: 8, name: 'Máquina CD-322', code: 'CD322', isActive: false, failures: 0 },
    ],
  },
];
---

<MainLayout title="Configuración de Líneas - Gestión de Averías" currentPath="/config">
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-dark-900 dark:text-dark-50 mb-2">
      Configuración de Líneas
    </h1>
    <p class="text-dark-600 dark:text-dark-400">
      Gestiona las líneas de producción y sus máquinas
    </p>
  </div>

  <!-- Quick Stats -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
    <div class="card p-4">
      <p class="text-sm text-dark-600 dark:text-dark-400 mb-1">Total de Líneas</p>
      <p class="text-2xl font-bold text-dark-900 dark:text-dark-50">{productionLines.length}</p>
    </div>
    <div class="card p-4">
      <p class="text-sm text-dark-600 dark:text-dark-400 mb-1">Total de Máquinas</p>
      <p class="text-2xl font-bold text-dark-900 dark:text-dark-50">
        {productionLines.reduce((acc, line) => acc + line.machines.length, 0)}
      </p>
    </div>
    <div class="card p-4">
      <p class="text-sm text-dark-600 dark:text-dark-400 mb-1">Máquinas Activas</p>
      <p class="text-2xl font-bold text-green-600 dark:text-green-400">
        {productionLines.reduce((acc, line) => acc + line.machines.filter(m => m.isActive).length, 0)}
      </p>
    </div>
  </div>

  <!-- Production Lines -->
  <div class="space-y-4">
    {productionLines.map((line) => (
      <Card client:load>
        <div class="p-6">
          {/* Line Header */}
          <div class="flex items-center justify-between mb-4">
            <div class="flex items-center gap-4">
              <button class="p-1 hover:bg-light-200 dark:hover:bg-dark-800 rounded transition-colors">
                <ChevronDown class="w-5 h-5 text-dark-600 dark:text-dark-400" />
              </button>
              <div>
                <div class="flex items-center gap-3">
                  <h2 class="text-2xl font-bold text-dark-900 dark:text-dark-50">
                    {line.name}
                  </h2>
                  {line.isActive ? (
                    <Badge variant="success" dot client:load>Activa</Badge>
                  ) : (
                    <Badge variant="neutral" dot client:load>Inactiva</Badge>
                  )}
                </div>
                <p class="text-sm text-dark-600 dark:text-dark-400 mt-1">
                  {line.description}
                </p>
              </div>
            </div>

            <div class="flex gap-2">
              <Button variant="outline" size="sm" icon={<Plus class="w-4 h-4" />} client:load>
                Añadir Máquina
              </Button>
              <Button variant="outline" size="sm" icon={<Edit class="w-4 h-4" />} client:load>
                Editar
              </Button>
              <Button variant="outline" size="sm" icon={<Trash2 class="w-4 h-4" />} client:load />
            </div>
          </div>

          {/* Machines List */}
          <div class="pl-10">
            <div class="space-y-2">
              {line.machines.map((machine) => (
                <div class="flex items-center justify-between p-4 rounded-lg bg-light-100 dark:bg-dark-800 hover:bg-light-200 dark:hover:bg-dark-700 transition-colors">
                  <div class="flex items-center gap-4 flex-1">
                    <div class={`p-2 rounded ${machine.isActive ? 'bg-green-100 dark:bg-green-900/20' : 'bg-gray-100 dark:bg-gray-900/20'}`}>
                      {machine.isActive ? (
                        <Power class="w-5 h-5 text-green-600 dark:text-green-400" />
                      ) : (
                        <PowerOff class="w-5 h-5 text-gray-600 dark:text-gray-400" />
                      )}
                    </div>

                    <div class="flex-1">
                      <div class="flex items-center gap-2">
                        <h3 class="font-semibold text-dark-900 dark:text-dark-50">
                          {machine.name}
                        </h3>
                        <span class="text-xs text-dark-500 dark:text-dark-500">
                          ({machine.code})
                        </span>
                      </div>
                      <p class="text-sm text-dark-600 dark:text-dark-400">
                        {machine.failures} averías registradas
                      </p>
                    </div>

                    {machine.isActive ? (
                      <Badge variant="success" client:load>Operativa</Badge>
                    ) : (
                      <Badge variant="neutral" client:load>Fuera de Servicio</Badge>
                    )}
                  </div>

                  <div class="flex gap-2 ml-4">
                    <Button variant="ghost" size="sm" client:load>
                      Ver Detalles
                    </Button>
                    <Button variant="outline" size="sm" icon={<Edit class="w-4 h-4" />} client:load />
                    <Button variant="outline" size="sm" icon={<Trash2 class="w-4 h-4" />} client:load />
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </Card>
    ))}
  </div>

  <!-- Add New Line -->
  <div class="mt-6">
    <Button variant="primary" icon={<Plus class="w-4 h-4" />} client:load>
      Añadir Nueva Línea
    </Button>
  </div>
</MainLayout>
